@model Category

<form method="post">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">Post Advertise</h2>
            <hr />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Id" class="p-0"></label>
            <br />
            <input asp-for="Id" class="form-control" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Adv_Name" class="p-0"></label>
            <br />
            <input asp-for="Adv_Name" class="form-control" />
            <span asp-validation-for="Adv_Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Adv_Theme" class="p-0"></label>
            <br />
            <input asp-for="Adv_Theme" class="form-control" />
            <span asp-validation-for="Adv_Theme" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Adv_Description" class="p-0"></label>
            <br />
            <input asp-for="Adv_Description" class="form-control" />
        </div>
        @*         <img src="@Model.imgPath" class="img-fluid" />
        *@        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

